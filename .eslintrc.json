{
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "import",
		"jsx-a11y"
    ],
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "ecmaFeatures": {
            "globalReturn": true,
            "impliedStrict": true,
            "jsx": true,
            "arrowFunction": true
        }
    },
    "env": {
        "es6":     true,
        "browser": true,
        "node":    true,
        "jest":    true,
        "commonjs":true,
        "jquery":  true
    },
    "rules": {
        "strict":             [ 2, "safe" ],
        "import/prefer-default-export": "off",
        "import/no-named-as-default": "off",
        "indent":             [0],
        "arrow-body-style":   [0],
        "arrow-parens":       [0],
        "no-debugger":        [2],
        "no-trailing-spaces": [2],
        "no-underscore-dangle": [0],
        "no-undef":           [2],
        "no-undefined":       [1],
        "no-eval":            [2],
        "no-with":            [2],
        "no-continue":        1,
        "no-extra-semi":      1,
        "no-unreachable":     1,
        "no-unused-expressions": 1,
        "no-magic-numbers":   1,
        "no-unused-vars":     1,
        "no-tabs":            0,
        "no-unneeded-ternary": [1],
        "no-return-assign":   [1],
        "no-else-return":     [1],
        "no-prototype-builtins": [0],
        "no-param-reassign"   :[0],
        "operator-assignment" : [0],
        "no-plusplus"         : [0],
        "no-lonely-if"        : [0],
        "no-console"          : [0],
        // "no-shadow": ["error", { "builtinGlobals": false, "hoist": "functions", "allow": [] }],
        "no-shadow": "off",
        "brace-style": [2,"1tbs",
            { "allowSingleLine": true }
        ],
        "object-curly-newline": [1],
        "class-methods-use-this": [0],
        "keyword-spacing":    [2],
        "prefer-destructuring": [1],
        "space-before-function-paren": [2, "never"],
        "spaced-comment":     [2, "always" ],
        "vars-on-top":        2,
        "comma-dangle":       [ 2, "never" ],
        "quotes":             [ 2, "single" ],
        "semi":               [ 2, "always" ],        
        "guard-for-in":       2,
        "valid-typeof":       2,
        "max-len": [2, 100, 2, {"ignoreComments": true}],
        "prop-types": [0],
        "padded-blocks": [1],
        "react/prefer-es6-class": 1,
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
		"react/jsx-filename-extension": [
			"error",
			{
				"extensions": [".js", ".jsx"]
			}
		]
    },
    "extends": ["airbnb-base"]
}